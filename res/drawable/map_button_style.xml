<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
       
    <item android:state_pressed="true" >
        <shape>
	      <solid
	          android:color="#FFFFFFFF" />
	      <stroke
				android:width="1dp"
				android:color="#DDDDDD" />
	      <corners
	          android:radius="2dp" />
	      <padding
	          android:left="5dp"
	          android:top="5dp"
	          android:right="5dp"
	          android:bottom="5dp" />
	    </shape>
    </item>
    
    <item>
        <shape>
			<solid
				android:color="#E5FFFFFF" />
	        <stroke
				android:width="1dp"
				android:color="#DDDDDD" />
			<corners
				android:radius="2dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
	    </shape>        
    </item>
</selector>
