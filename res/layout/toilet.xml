<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bfhh_green"
    android:orientation="vertical" >
    
<!-- Wrapper Layout makes margins possible -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/toilet_item_style" >
    
    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="top"
       android:orientation="horizontal">  
	   <!--name -->
	   <TextView
	       android:id="@+id/toilet_name"
	       android:layout_width="0dp"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_toLeftOf="@+id/toilet_distance"
	       android:paddingRight="10sp"
	       android:textStyle="bold"
	       android:textSize="@dimen/toilet_text"
	       android:text="Name"/>
	   
	 	<!--distance -->
	    <TextView
	       android:id="@+id/toilet_distance"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentRight="true"
	       android:layout_alignParentTop="true"
	       android:gravity="center"
	       android:text="dist"
	       android:textSize="@dimen/toilet_text" /> 
	 
	</RelativeLayout>
   
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:paddingTop="5dp">
		        
        <!--adress -->
	    <TextView
	        android:id="@+id/toilet_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/icon"
	        android:paddingBottom="5sp"
	        android:textSize="@dimen/toilet_text"
	        android:text="address" />
	    
	    <!--description -->
	    <TextView
	        android:id="@+id/toilet_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/icon"
	        android:layout_below="@id/toilet_address"
	        android:textStyle="italic"
	        android:textSize="@dimen/toilet_text"
	        android:text="description" />  
			    		    
	   <!--  icon -->
	    <ImageView
		    android:id="@+id/icon"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
	        android:src="@drawable/yellow_icon_w" 
	        android:gravity="right"
	        android:contentDescription="icon" />
		            
	</RelativeLayout>

</LinearLayout >
</LinearLayout >