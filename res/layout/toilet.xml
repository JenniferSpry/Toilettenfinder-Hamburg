<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bfhh_green"
    android:orientation="vertical" >
    
<!-- Wrapper Layout makes margins possible -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/toilet_item_style" >
    
   <!--name -->
   <TextView
       android:id="@+id/toilet_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:textSize="@dimen/toilet_text"
       android:text="Name"/>
   
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:paddingTop="5dp">
   
	   <LinearLayout
	       android:layout_width="0dp"
	       android:layout_height="wrap_content"
	       android:layout_weight="0.8"
	       android:orientation="vertical"
	       android:paddingRight="5dp"
	       android:paddingTop="5dp">
			    
	        <!--adress -->
		    <TextView
		        android:id="@+id/toilet_address"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:paddingBottom="5sp"
		        android:textSize="@dimen/toilet_text"
		        android:text="address" />
		    
		     <!--description -->
		    <TextView
		        android:id="@+id/toilet_description"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:textSize="@dimen/toilet_text"
		        android:text="description" />         
		    
		</LinearLayout>
		<LinearLayout
	       android:layout_width="0dp"
	       android:layout_height="wrap_content"
	       android:layout_weight="0.2"
	       android:orientation="vertical"
	       android:paddingTop="5dp">  
		
		   <!--distance -->
	        <TextView
		        android:id="@+id/toilet_distance"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="right"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:textSize="@dimen/toilet_text" /> 
			
			<ImageView
			    android:id="@+id/icon"
			    android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="right"
		        android:contentDescription="icon" />
			    
	    </LinearLayout>
	</LinearLayout>
</LinearLayout >
</LinearLayout >